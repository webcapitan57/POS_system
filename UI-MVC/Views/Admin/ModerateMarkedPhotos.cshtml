@model IEnumerable<POC.BL.Domain.delivery.Answer>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<link rel="stylesheet" href="@Url.Content("~/dist/admin.css")" type="text/css"/>

<div class="card-container">
    @foreach (var answer in Model)
    {
        <div id="answer_@answer.AnswerId" class="card">
            <img class="card-img-top img" src="https://storage.googleapis.com/@ViewBag.bName/Images/@answer.AssignedPhoto.Picture" alt="Image">
            <div class="action-buttons">
                <a class="cursor text-danger remove-marked-photo" id="remove_@answer.AnswerId "
                   data-toggle="tooltip" data-placement="bottom" title="Verwijder foto uit setup">
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                    </svg>
                </a>
                <button class="cursor btn btn-success" id="unmark_@answer.AnswerId" data-toggle="tooltip" data-placement="bottom" title="Verwijder flag">OK</button>
            </div>
        </div>
    }
</div>

@section Scripts{
    <script src="~/dist/removeMarkedPhoto.entry.js" defer></script>
    <script src="~/dist/unmarkPhoto.entry.js" defer></script>
}