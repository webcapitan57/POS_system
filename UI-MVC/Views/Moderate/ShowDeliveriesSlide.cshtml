<div id="slide">
    @for (var x = 1; x <= @Model.Answers.Count; x++)
    {
        <div>
            <h5>@Model.Answers[x - 1].AnsweredQuestion.Question</h5>
            <div id="@x" class="photo">
                <svg xmlns="http://www.w3.org/2000/svg" class="btn-previous bi bi-arrow-left-circle-fill" viewBox="0 0 16 16">
                    <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0zm3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5H11.5z"/>
                </svg>
                <p class="lbl-pos">@x / @Model.Answers.Count</p>
                <img src="https://storage.googleapis.com/@ViewBag.bucketName/Images/@Model.Answers[x - 1].AssignedPhoto.Picture" alt="">
                <svg xmlns="http://www.w3.org/2000/svg" class="btn-next bi bi-arrow-right-circle-fill" viewBox="0 0 16 16">
                    <path d="M8 0a8 8 0 1 1 0 16A8 8 0 0 1 8 0zM4.5 7.5a.5.5 0 0 0 0 1h5.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H4.5z"/>
                </svg>
            </div>

            <div id="@(x - 1)" class="slide-side-answers">
                @if (Model.LikedAnswers.Contains(Model.Answers[x - 1]))
                {
                    <div id="like-buttons_@Model.Answers[x - 1].AnswerId" class="like-buttons liked">
                        <div id="@Model.Answers[x - 1].AnswerId" class="btn-like">
                            <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-heart" viewBox="0 0 16 16">
                                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                            </svg>
                        </div>
                        <div id="@Model.Answers[x - 1].AnswerId" class="btn-unlike">
                            <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                            </svg>
                        </div>
                    </div>
                }
                else
                {
                    <div id="like-buttons_@Model.Answers[x - 1].AnswerId" class="like-buttons">
                        <div id="@Model.Answers[x - 1].AnswerId" class="btn-like">
                            <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-heart" viewBox="0 0 16 16">
                                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
                            </svg>
                        </div>
                        <div id="@Model.Answers[x - 1].AnswerId" class="btn-unlike">
                            <svg xmlns="http://www.w3.org/2000/svg" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z"/>
                            </svg>
                        </div>
                    </div>
                }

                @if (Model.Answers[x - 1].SideAnswers.Count != 0)
                {
                    @foreach (var sideAnswer in @Model.Answers[x - 1].SideAnswers)
                    {
                        <div class="form-group">
                            <label>@sideAnswer.AnsweredQuestion.Question</label>
                            <input class="form-control" disabled value="@sideAnswer.GivenAnswer">
                        </div>
                    }
                }
            </div>
        </div>
    }

</div>
<div hidden id="primColor">@Model.Teacher.SetUp.PrimColor</div>
<div hidden id="secColor" >@Model.Teacher.SetUp.SecColor</div>


@section Scripts
{
    <script type="module" src="~/dist/selectSlide.entry.js" defer></script>
    @* <script src="~/js/Moderate/Slide/filter.js" defer></script> *@
    <script type="module" src="~/dist/likeModerate.entry.js" defer></script>
    <script type="module" src="~/dist/moderate.entry.js" defer></script>
    <script type="module" src="~/dist/setupcolors.entry.js"></script>
}