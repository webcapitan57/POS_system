@model POC.BL.Domain.profile.StudentMCProfileQuestion

<div id="studentProfileQuestion_@Model.ProfileQuestionId">
    <br/>
    <h4>
        MC Profiel Vraag
        <button class="btn" id="removeStudentProfileQuestion_@Model.ProfileQuestionId">
            <img src="~/resources/Icons/cross.svg" alt="verwijder">
        </button>
    </h4><br/>

    <div class="form-group">
        <label>Vraag:</label>
        <input id="Question_@Model.ProfileQuestionId" asp-for="Question" type="text" placeholder="Geef hier je meerkeuzevraag" class="form-control"/>
        <span id="QuestionSpan_@Model.ProfileQuestionId"></span>
    </div>

    <div class="form-group">
        <label>Categorie:</label>
        <input id="Description_@Model.ProfileQuestionId" asp-for="Description" type="text" placeholder="Kernwoord (max 20 karakters)" class="form-control"/>
        <span id="DescriptionSpan_@Model.ProfileQuestionId"></span>
    </div>

    <div class="form-group">
        <label>Verplicht</label>
        <input id="IsRequired_@Model.ProfileQuestionId" asp-for="IsRequired" type="checkbox"/>
    </div>
    <button class="btn btn-light btn-options" id="addStudentProfileOption_@Model.ProfileQuestionId">
        <img src="~/resources/Icons/plus-square-dotted.svg" alt="+extra optie">
        Voeg optie toe
    </button>
    <div id="studentOptions_@Model.ProfileQuestionId">
        @foreach (var option in Model.StudentProfileOptions)
        {
            <partial name="_StudentProfileOption" for="@option"/>
        }
    </div>

</div>